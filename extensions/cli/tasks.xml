<?xml version="1.0"?>
<project name="dbtune-cli-tasks" basedir="." default="compile">

  <import file="../../tasks.xml"/>

  <path id="cli.compile.classpath">
    <fileset dir="../../${lib.dir}" includes="*.jar" />
    <fileset dir="${lib.dir}" includes="*.jar" />
    <pathelement location="${build.dir}/classes/" />
  </path>

  <target name="init">
    <taskdef resource="scala/tools/ant/antlib.xml">
      <classpath refid="cli.compile.classpath"/>
    </taskdef>
  </target>

  <!-- this depends on running 'ant compile' from dbtune root manually -->
  <target name="compile" depends="init" description="Compile Scala source">
    <scalac srcdir="${src.dir}"
         destdir="${build.dir}/classes"
         classpathref="cli.compile.classpath"
         addParams="-make:changed" >
      <include name="**/*.scala" />
      <exclude name="edu/ucsc/dbtune/cli/init.scala" />
    </scalac>
  </target>

  <target name="compile.tests" depends="compile" description="Compile test source">
    <scalac srcdir="${src.dir}"
         destdir="${build.dir}/tests"
         classpathref="cli.compile.classpath"
         addParams="-make:changed" >
      <include name="**/*Test.scala" />
      <exclude name="edu/ucsc/dbtune/cli/init.scala" />
    </scalac>
  </target>

  <target name="test.functional" depends="compile.tests" description="Execute functional tests">
  </target>

  <target name="test.unit" depends="compile.tests" description="Execute tests">
  </target>
</project>
